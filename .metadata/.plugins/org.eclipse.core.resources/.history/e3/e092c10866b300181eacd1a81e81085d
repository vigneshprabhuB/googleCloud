public class Tryyyy {

	public static void main(String a[]) throws IOException {

		String basicEncoded = Base64.getEncoder().encodeToString(
				"NARAYANAMOBILEAPP:Narayana@123".getBytes("utf-8"));
		System.out.println("Basic " + basicEncoded);

		String urlEncoded = Base64.getUrlEncoder().encodeToString(
				"NARAYANAMOBILEAPP:Narayana@123".getBytes("utf-8"));
		System.out.println("Using URL Alphabet: " + urlEncoded);

		try {
			
			URL url = new URL("https://api.infobip.com/sms/1/text/single");
			HttpURLConnection usConnection=(HttpURLConnection) url.openConnection();
			usConnection.setRequestMethod("POST");
			usConnection.setRequestProperty("Content-Type", "application/json");
			usConnection.setRequestProperty("Authorization","Basic TkFSQVlBTkFNT0JJTEVBUFA6TmFyYXlhbmFAMTIz");
			usConnection.setRequestProperty("Accept", "application/json");
			usConnection.setDoOutput(true);;
			usConnection.getOutputStream().write("{\"from\":\"Friend\",\"to\":\"+919659076135\",\"text\":\"hai this test\"}");;
			usConnection.getInputStream();
			
		
		} catch (Exception e) {
			e.printStackTrace();
		}

	}
