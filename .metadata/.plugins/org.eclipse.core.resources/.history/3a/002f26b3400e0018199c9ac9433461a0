import java.io.IOException;
import java.io.OutputStream;
import java.net.HttpURLConnection;
import java.net.URL;


public class Classexmp {
	
	public static void main (String arg[]) throws ClassNotFoundException, InstantiationException, IllegalAccessException,
			IOException {

		URL url = new URL("http:localhost:8080/NH/updateCustomerApprovalPurchaseReq.svc");
		HttpURLConnection con=(HttpURLConnection) url.openConnection();
		con.setRequestMethod("POST");
		String a="{a:'',b:''}";
		con.setDoInput(true);
		OutputStream os=con.getOutputStream();
		os.write(a.getBytes());
	
	}
}
