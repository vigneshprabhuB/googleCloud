package com.test.pol;


public class Numbertoword {
	
	int gettheTotalDigits(int number){
		int numberOfZeros=0;
		boolean pass=true;
		while(pass){
			number=number/10;
			numberOfZeros=numberOfZeros+1;
			if(number<10){
				pass=false;
				
			}
		}
		return numberOfZeros;
	}

	
	public static void main(String a[]){
		
		int number=102;
		Numbertoword findTotalDigit=new Numbertoword();
		boolean pass=true;
		while(pass){
		 Math.pow(10,findTotalDigit.gettheTotalDigits(number))
		//	number=(int) (number/Math.pow(1, findTotalDigit.gettheTotalDigits(number)));
			pass=false;
		}
	
		
	
		
		
		
		
	}

}
