package com.test.pol;


public class Numbertoword {
	
	int gettheTotalDigits(int number){
		int numberOfDigit=1;
		boolean pass=true;
		while(pass){
			number=number/10;
			numberOfDigit=numberOfDigit+1;
			if(number<10){
				pass=false;
				
			}
		}
		return numberOfDigit;
	}

	
	public static void main(String a[]){
		
		int number=102;
		System.out.println(new Numbertoword().gettheTotalDigits(number));
		
	
		
	
		
		
		
		
	}

}
