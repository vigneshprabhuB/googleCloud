package com.test.pol;


public class Numbertoword {
	

	
	public static void main(String a[]){
		
		int number=1021;
		int actualNumber=number;
		int numberOfDigit=1;
		boolean pass=true;
		while(pass){
			number=number/10;
			numberOfDigit=numberOfDigit+1;
			if(number<10){
				pass=false;
			}
		}
	
		int oncePosition=(int) (actualNumber/Math.pow(10, numberOfDigit-1));
		int tensePosition=(int) ((actualNumber/numberOfDigit-2)/Math.pow(10, numberOfDigit-2));
		int hundrethPosition=(int) ((actualNumber/numberOfDigit-3)/Math.pow(10, numberOfDigit-3));
		System.out.println(oncePosition);
		System.out.println(tensePosition);
		System.out.println(hundrethPosition);
		
		
		
		
	}

}
