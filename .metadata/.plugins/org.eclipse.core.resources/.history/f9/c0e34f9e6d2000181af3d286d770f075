package com.test.pol;


public class Numbertoword {

int findNumberOfDigit(int number){
	if(number>0){
	int digit=1;
	while(number>=10){
		number=number/10;
		digit=digit+1;
	}
	}
	return number;	
}	
	
	
	

   public static void main(String a[]){
		int number=1021;
		Numbertoword numbertoword=new Numbertoword();
		System.out.println(numbertoword.findNumberOfDigit(number));
		
		
	}

}
