import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.HttpURLConnection;
import java.net.URL;

import org.json.JSONException;
import org.json.JSONObject;


public class Classexmp {
	
	public static void main (String arg[]) throws ClassNotFoundException, InstantiationException, IllegalAccessException,

		URL url = new URL("http://127.0.0.1:8080/NH/updateCustomerApprovalPurchaseReq.svc");
		HttpURLConnection con=(HttpURLConnection) url.openConnection();
//		/con.setRequestProperty("Accept", value);
		con.setDoOutput(true);
		con.setRequestMethod("POST");
		OutputStream os=con.getOutputStream();
		JSONObject obj=new JSONObject("{}");
		os.write(obj.toString().getBytes());
		InputStream is=con.getInputStream();
		int bytedata=0;
		while((bytedata=is.read())!=-1){
			System.out.println((char)bytedata);
		}
	
	}
}
