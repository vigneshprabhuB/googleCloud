package com.test.pol;


public class Numbertoword {
	

	
	public static void main(String a[]){
		
		int number=1021;
		int actualNumber=number;
		int numberOfDigit=1;
		boolean pass=true;
		while(pass){
			number=number/10;
			numberOfDigit=numberOfDigit+1;
			if(number<10){
				pass=false;
			}
		}
	
		int othPosition=(int) (actualNumber/Math.pow(10, numberOfDigit-1));
		System.out.println(othPosition);
		
		
		
	}

}
