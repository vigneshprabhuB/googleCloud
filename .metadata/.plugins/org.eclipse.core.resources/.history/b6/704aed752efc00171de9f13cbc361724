import java.util.ArrayList;
import java.util.List;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class Simplify {
	public static void main(String s[]) throws IOException {
		String mainDir_source="D://Trimedx_Server//apache-tomcat-8.0.39//webapps//NH//";
		List <String>ctrlFiles=new ArrayList<String>();
		FileReader is = new FileReader("F:/controllers.txt");
		int byteVal = 0;
		String sample = "";
		while ((byteVal = is.read()) != -1) {
			sample = sample + (char) byteVal;
			String filename = "";

			if (sample.contains("src=\"")) {
				sample = "";
				while ((byteVal = is.read())  != -1 && byteVal!=34 ) {
					sample = sample + (char) byteVal;
					filename = sample;
				}
				ctrlFiles.add(filename);
				System.out.println(filename);
			}

		}
		int totalFilesize=ctrlFiles.size();
		FileWriter outWriirwnfile=new FileWriter("F://outputfile.js");
		for(int y=0;y<totalFilesize;y++){
			FileReader inputread=new FileReader(mainDir_source+ctrlFiles.get(y));
			
			int readByte=0;
			while((readByte=inputread.read())!=-1){
				outWriirwnfile.write(readByte);
			}
		}
	
	}

}
